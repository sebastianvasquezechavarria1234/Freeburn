<style is:global>
	body{
		background-color: black;
		color: white;
	}
	h1,
	h2,
	h3,
	h4,
	h5{
		font-family: "Aboreto", system-ui;
	}
	p,
	a{
		color: currentColor;
		font-family: "Quicksand", sans-serif;
		font-weight: 300;
		font-size: 18px;
	}
	a{
		text-transform: uppercase;
		font-weight: 400;
		letter-spacing: 2px;
	}
	h2{
		font-size: 2.5rem;
		line-height: 50px;
	}
	@media screen and (max-width: 600px){
		p,
		a{
			font-size: 16px;
		}
		h2{
			font-size: 1.6rem;
			line-height: 30px;
		}
	}
</style>
